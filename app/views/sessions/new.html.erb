<h1>Sign in</h1>

<div class="row">
  <div class="span8 offset2">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? Join anime-rec now. <%= link_to "Sign up", signup_path %></p>
  </div>
</div>

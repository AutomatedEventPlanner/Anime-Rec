<div id="approval_form">
   <% if signed_in? && current_user.admin? %>
       <% if @anime.approved? %>
            <%= render 'rejected' %>
       <% else %>
            <%= render 'approved' %>
       <% end %>
   <% end %>
</div>

<h1><%= @anime.name %></h1>
<p><%= @anime.description %></p>
<h3><%= @anime.rating %></h3>
<h3><%= @anime.tags %></h3>
<div id="update_anime">
<% if !signed_in? %>
<% elsif ((signed_in? && @anime.approved?) || (current_user.admin?)) %>
  <%= link_to "Update Anime Info", edit_anime_path(@anime) %>
<% end %>
</div>
